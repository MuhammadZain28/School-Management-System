<Page x:Class="LMS.AttendenceReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LMS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AttendenceReport">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="137*"/>
        </Grid.RowDefinitions>
        <Label x:Name="select" Content="Month" Margin="65,5,65,0" FontSize="20" FontWeight="Bold"/>
        <Border VerticalAlignment="Top" Height="60" Margin="65,5,65,0" Background="#FFE9E9E9" CornerRadius="5" BorderBrush="#FF969696" BorderThickness="1" Grid.Row="2">
            <ComboBox x:Name="month" BorderBrush="#FF00D0FF" BorderThickness="0" Margin="2" ScrollViewer.CanContentScroll="False" Background="{x:Null}" SelectionChanged="Month_SelectionChanged">
            </ComboBox>
        </Border>
    </Grid>
</Page>
